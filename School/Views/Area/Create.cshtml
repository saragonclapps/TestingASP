@model Student

@{
    ViewData["Title"] = "Create area";
    ViewBag.Date = System.DateTime.Now;
}

<h1>@ViewData["Title"]</h1>
<p><i>@ViewBag.Date</i></p>
<div asp-validation-summary="All"></div>
<form method="POST">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name"/>
    </div>
    <div>
        <label asp-for="CourseId"></label>
        @Html.DropDownList(
            "CourseId", 
            new SelectList(ViewBag.Courses),
            "Select the course",
            new {@class = "form-control"}
            )
    </div>
    <input type="submit"/>
</form>
